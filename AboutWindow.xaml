<Window
    x:Class="DCSMissionReader.AboutWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="About"
    Width="400" Height="200"
    WindowStartupLocation="CenterOwner"
    ResizeMode="NoResize"
    WindowStyle="None"
    AllowsTransparency="True"
    Background="Transparent">

    <Border Background="#EE1B263B" BorderBrush="{StaticResource DCS_Highlight}" BorderThickness="2">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="DCS MISSION BRIEFING READER v1.0" Foreground="{StaticResource DCS_Highlight}" FontSize="18" HorizontalAlignment="Center" Margin="0,0,0,15" FontWeight="Bold"/>
                <TextBlock Text="Ioannis Roussos" Foreground="{StaticResource DCS_Text}" FontSize="16" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                <TextBlock Text="Jan-2026" Foreground="{StaticResource DCS_TextMuted}" FontSize="13" HorizontalAlignment="Center"/>
            </StackPanel>

            <Button Grid.Row="1" Content="CLOSE" Width="100" HorizontalAlignment="Center" Click="CloseButton_Click" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Foreground="{StaticResource DCS_Text}" BorderBrush="{StaticResource DCS_Border}" BorderThickness="1" Padding="10,5"/>
        </Grid>
    </Border>
</Window>
