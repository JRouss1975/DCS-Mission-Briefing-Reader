<Window
    x:Class="DCSMissionReader.AboutWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="About"
    Width="400" Height="300" AllowsTransparency="True" Background="Transparent"
    ResizeMode="NoResize" WindowStartupLocation="CenterOwner" WindowStyle="None">

    <Border Background="#EE1B263B" BorderBrush="{StaticResource DCS_Highlight}" BorderThickness="2">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock
                    Margin="0,0,0,10" HorizontalAlignment="Center" FontSize="18" FontWeight="Bold"
                    Foreground="{StaticResource DCS_Highlight}"
                    Text="DCS MISSION BRIEFING READER v1.1a" />
                <TextBlock
                    Margin="0,0,0,20" HorizontalAlignment="Center" FontSize="14"
                    Foreground="{StaticResource DCS_Text}"
                    Text="Created by Ioannis Roussos" />

                <!--  Attribution & Disclaimer  -->
                <TextBlock
                    Margin="0,0,0,10" HorizontalAlignment="Center" FontSize="10" FontWeight="Bold"
                    Foreground="{StaticResource DCS_Red}"
                    Text="THIS MATERIAL IS NOT MADE OR SUPPORTED BY EAGLE DYNAMICS SA." TextAlignment="Center" TextWrapping="Wrap" />

                <TextBlock
                    HorizontalAlignment="Center" FontSize="10"
                    Foreground="{StaticResource DCS_TextMuted}"
                    TextAlignment="Center" TextWrapping="Wrap">
                    Map data Â©<Hyperlink Foreground="{StaticResource DCS_Highlight}" NavigateUri="https://www.openstreetmap.org/copyright" RequestNavigate="Hyperlink_RequestNavigate">OpenStreetMap contributors</Hyperlink>
                </TextBlock>
                <TextBlock
                    Margin="0,15,0,0" HorizontalAlignment="Center" FontSize="9"
                    Foreground="{StaticResource DCS_TextMuted}"
                    Text="Jan-2026" />
            </StackPanel>

            <Button
                Grid.Row="1" Width="100" Padding="10,5" HorizontalAlignment="Center"
                BorderBrush="{StaticResource DCS_Border}"
                BorderThickness="1" Click="CloseButton_Click" Content="CLOSE"
                Foreground="{StaticResource DCS_Text}"
                Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" />
        </Grid>
    </Border>
</Window>
